<p id="notice"><%= flash[:notice] %></p>
<div class="container">
    <div class="row">
     <%= render 'list',user: @book_user %>

      <div class="col-md-8 offset-md-1">
       <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr></tr>
            <tr>
             <td>
              </td>
              <td>
               <%= link_to (@book.user) do %>
               <%= image_tag @book.user.get_profile_image(100,100) %>
               <br><%= @book.user.name %>
               </br>
               <% end %>
              </td>
              <td>
               <%= link_to @book.title, book_path(@book) %>
               </td>
              <td>
               <%= @book.body %>
               </td>
              <td><% if @book.user == current_user %>
                  <%= link_to "Edit",edit_book_path(@book),class:"btn btn-sm btn-success edit_book" %>
                  <% end %>
              </td>
              <td><% if @book.user == current_user %>
                  <%= link_to "Destroy",book_path(@book),class:"btn btn-sm btn-danger", method: :delete,"data-confirm" => "本当に削除しますか？" %>
                  <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
</div>